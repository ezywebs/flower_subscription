<p id="notice"><%= notice %></p>

<h1>Subscriptions</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Frequency</th>
    <th>Product</th>
    <th>Next Delivery</th>
    <th>Status</th>
    <th>Address</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @subscriptions.each do |subscription| %>
    <% address = subscription.address %>
    <tr>
      <td><%= subscription.frequency %></td>
      <td><%= "#{subscription.product.name} #{subscription.product.size}" %></td>
      <td><%= subscription.next_delivery %></td>
      <td><%= subscription.status %></td>
      <td><%= "#{address.address1} #{address.address2} #{address.city} #{address.zip_code}"  %></td>
      <td><%= link_to 'Show', subscription %></td>
      <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
      <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Subscription', new_subscription_path %>
